#!/bin/sh
set -e

case "`archdetect`" in
	arm*/armadaxp)
		exit 0
	;;
	arm*/exynos5)
		exit 0
	;;
	arm*/generic-lpae)
		exit 0
	;;
	arm*/iop32x)
		exit 0
	;;
	arm*/ixp4xx)
		exit 0
	;;
	arm*/keystone)
		exit 0
	;;
	arm*/kirkwood)
		exit 0
	;;
	arm*/mx5)
		exit 0
	;;
	arm*/orion5x)
		exit 0
	;;
	arm*/s3c24xx)
		exit 0
	;;
	arm*/omap)
		exit 0
	;;
	arm*/omap4)
		exit 0
	;;
	arm64/xgene)
		exit 0
	;;
	arm*/generic)
		FK_DIR="/usr/share/flash-kernel"

		. ${FK_DIR}/functions
		get_machine
		if check_supported "$machine" ; then
			exit 0
		else
			exit 1
		fi
	;;
	# Don't activate it by default
	*)
		exit 1
	;;
esac

